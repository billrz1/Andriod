<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Toolbar" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.AppTheme" />
    <style name="Base.AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <!--启动页主题-->
    <style name="Theme.Launcher" parent="AppTheme" >
        <!--给window窗口设置背景图-->
        <item name="android:windowBackground">@drawable/launcher_image</item>
        <item name="android:windowFullscreen">true</item>
        <!--将顶部状态栏和导航栏设置为透明，并将界面内容布局上边界上提至状态栏顶部-->
        <item name="android:navigationBarColor">@android:color/transparent</item>
    </style>

    <!-- 圆形图片 -->
    <style name="circleImageStyle">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <!--底部弹窗效果-->
    <style name="AnimBottom" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/pop_enter_anim</item>
        <item name="android:windowExitAnimation">@anim/pop_exit_anim</item>
    </style>

    <!-- 自定义loading dialog -->
    <style name="loading_dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/dialog_loading</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
</resources>